<odoo>
    <data>

        <!--  tree view Partner  -->
        <record id="partner_tree" model="ir.ui.view">
            <field name="name">re.partner.tree</field>
            <field name="model">re.partner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <!--  tree view Agent  -->
        <record id="agent_tree" model="ir.ui.view">
            <field name="name">re.agent.tree</field>
            <field name="model">re.agent</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="address"/>
                </tree>
            </field>
        </record>

        <!--  kanban view Partner  -->
        <record id="partner_kanban" model="ir.ui.view">
            <field name="name">re.partner.kanban</field>
            <field name="model">re.partner</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="address"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                    <i class="fa fa-user" role="img" title="partner"/>
                                    <br/>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="image" widget="image" class="oe_avatar"/>
                                <hr class="mt4 mb4"/>
                                <div class="row" t-if="!selection_mode">
                                    <div class="col-6 text-center">
                                        <span t-esc="record.name.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.tel.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.email.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.address.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

            <!--  kanban view agent  -->
        <record id="agent_kanban" model="ir.ui.view">
            <field name="name">re.agent.kanban</field>
            <field name="model">re.agent</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="tel"/>
                    <field name="email"/>
                    <field name="address"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                    <i class="fa fa-user" role="img" title="agent"/>
                                    <br/>
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="image" widget="image" class="oe_avatar"/>
                                <hr class="mt4 mb4"/>
                                <div class="row" t-if="!selection_mode">
                                    <div class="col-6 text-center">
                                        <span t-esc="record.name.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.tel.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.email.value"/>
                                    </div>
                                    <div class="col-6 text-center">
                                        <span t-esc="record.address.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--  form view Partner  -->
        <record id="partner_form" model="ir.ui.view">
            <field name="name">re.partner.form</field>
            <field name="model">re.partner</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1"/>
                            </h1>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="tel"/>
                                <field name="email"/>
                                <field name="address"/>
                            </group>
                            <group>
                                <field name="title" option="{'no_open': True, 'no_create': True}"/>
                                <field name="type"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" option="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!--  form view agent  -->
        <record id="agent_form" model="ir.ui.view">
            <field name="name">re.agent.form</field>
            <field name="model">re.agent</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ref" readonly="1"/>
                            </h1>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="tel"/>
                                <field name="email"/>
                                <field name="address"/>
                            </group>
                            <group>
                                <field name="login"/>
                                <field name="password"/>
                                <field name="title" option="{'no_open': True, 'no_create': True}"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids" option="{'post_refresh':'recipients'}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- search view -->
    <record id="partner_search" model="ir.ui.view">
            <field name="name">re.partner.search</field>
            <field name="model">re.partner</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="filter_lodger" string="Lodger" domain="[('type', '=', 'lodger')]"/>
                    <filter name="filter_owner" string="Owner" domain="[('type', '=', 'owner')]"/>
                </search>
            </field>
    </record>

    </data>
</odoo>
